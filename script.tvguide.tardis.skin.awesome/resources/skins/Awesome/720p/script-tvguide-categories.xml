    <controls>
        <!-- # Cat Backgrounds -->
        <!-- Cat Background colour from settings -->
        <control type="image" id="7000">
            <posx>0</posx>
            <posy>0</posy>
            <width>1280</width>
            <height>30</height>
            <texture>white.png</texture>
            <visible>true</visible>
        </control>
        <!-- extra dark layer -->
