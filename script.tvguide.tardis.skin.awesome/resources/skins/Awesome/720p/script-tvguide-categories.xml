        <control type="image">
            <description>cat bar image header background</description>
            <posx>0</posx>
            <posy>0</posy>
            <width>1280</width>
            <height>30</height>
            <texture>tvg-program-nofocus.png</texture>
            <!--<visible>!Control.HasFocus(7000)</visible>-->
        </control>
        <!-- # quit -->
        <control type="button" id="7003">
            <label></label>
            <description>quit</description>
            <posx>0</posx>
            <posy>8</posy>
            <width>18</width>
            <height>18</height>
            <aligny>center</aligny>
            <align>center</align>
            <textcolor>grey</textcolor>
            <focusedcolor>black</focusedcolor>
            <texturefocus>buttons/mouse/prevFO.png</texturefocus>
            <texturenofocus>buttons/mouse/prev.png</texturenofocus>
            <!--<texturefocus>tvg-transparent.png</texturefocus>
            <texturenofocus>tvg-transparent.png</texturenofocus>-->
            <visible>true</visible>
        </control>
