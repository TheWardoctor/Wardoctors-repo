        <control type="button" id="7005">
            <label></label>
            <description>Search program category</description>
            <posx>-1220</posx>
            <posy>0</posy>
            <width>28</width>
            <height>28</height>
            <font>font10</font>
            <align>center</align>
            <aligny>center</aligny>
            <textcolor>grey</textcolor>
            <focusedcolor>yellow</focusedcolor>
            <texturefocus>tvg-button-focus.png</texturefocus>
            <texturenofocus>buttons/actionbar/search.png</texturenofocus>
