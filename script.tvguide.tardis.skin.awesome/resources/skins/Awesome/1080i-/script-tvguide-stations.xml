<?xml version="1.0" encoding="utf-8"?>
<window type="dialog">
    <allowoverlay>no</allowoverlay>
    <defaultcontrol always="true">6000</defaultcontrol>
    <coordinates>
        <system>1</system>
        <posx>0</posx>
        <posy>0</posy>
    </coordinates>
    <controls>
        <!-- # visibility marker for selection box -->
        <control type="label" id="6001">
            <description>visibility marker for selection box</description>
        </control>
        <!-- # Backgrounds -->
        <control type="image">
            <posx>0</posx>
            <posy>0</posy>
            <width>1920</width>
            <height>1080</height>
            <texture>black-back.png</texture>
        </control>
        <control type="image">
            <description>main mount</description>
            <posx>15</posx>
            <posy>15</posy>
            <width>1890</width>
            <height>1050</height>
            <texture>grey.png</texture>
            <visible>true</visible>
        </control>
        <control type="image">
            <description>main background</description>
            <posx>18</posx>
            <posy>18</posy>
            <width>1884</width>
            <height>1044</height>
            <texture>black-back.png</texture>
            <visible>true</visible>
        </control>
        <!-- # Remove channels Label -->
        <control type="label">
            <posx>300</posx>
            <posy>60</posy>
            <width>780</width>
            <height>60</height>
            <align>left</align>
            <aligny>center</aligny>
            <textcolor>white</textcolor>
            <label>[B]Add &amp; Remove channels from your lineup[/B]</label>
        </control>
        <!-- # Available channels Label -->
        <control type="label">
            <posx>300</posx>
            <posy>120</posy>
            <width>600</width>
            <height>60</height>
            <align>center</align>
            <aligny>center</aligny>
            <textcolor>white</textcolor>
            <label>Available channels</label>
        </control>
        <!-- # Stations main list 1 -->
        <control type="fixedlist" id="7000">
            <posx>300</posx>
            <posy>188</posy>
            <width>600</width>
            <height>720</height>
            <viewtype label="list">list</viewtype>
            <orientation>vertical</orientation>
            <onright>6000</onright>
            <!-- layout -->
            <itemlayout width="600" height="60">
                <control type="image">
                    <posx>0</posx>
                    <posy>0</posy>
                    <width>600</width>
                    <height>57</height>
                    <texture>tvg-button-nofocus.png</texture>
                </control>
                <control type="label">
                    <posx>24</posx>
                    <posy>0</posy>
                    <width>525</width>
                    <height>57</height>
                    <aligny>center</aligny>
                    <textcolor>white</textcolor>
                    <info>ListItem.Label</info>
                </control>
            </itemlayout>
            <!-- focused layout -->
            <focusedlayout width="780" height="60">
                <control type="image">
                    <posx>0</posx>
                    <posy>0</posy>
                    <width>600</width>
                    <height>57</height>
                    <texture>tvg-button-nofocus.png</texture>
                    <visible>!Control.HasFocus(7000)</visible>
                </control>
                <control type="image">
                    <posx>0</posx>
                    <posy>0</posy>
                    <width>600</width>
                    <height>57</height>
                    <texture>tvg-button-focus.png</texture>
                    <visible>Control.HasFocus(7000)</visible>
                </control>
                <control type="label">
                    <posx>24</posx>
                    <posy>0</posy>
                    <width>525</width>
                    <height>57</height>
                    <aligny>center</aligny>
                    <textcolor>white</textcolor>
                    <label>[B]$INFO[ListItem.Label][/B]</label>
                </control>
            </focusedlayout>
        </control>
        <control type="label">
            <posx>1050</posx>
            <posy>120</posy>
            <width>600</width>
            <height>60</height>
            <align>center</align>
            <aligny>center</aligny>
            <textcolor>white</textcolor>
            <label>Selected channels</label>
        </control>
        <!-- # Stations main list 2 -->
        <control type="fixedlist" id="6000">
            <posx>1050</posx>
            <posy>188</posy>
            <width>600</width>
            <height>720</height>
            <viewtype label="list">list</viewtype>
            <orientation>vertical</orientation>
            <onright>6003</onright>
            <onleft>7000</onleft>
