<?xml version="1.0" encoding="utf-8"?>
<!--
    C_PROGRAM_LIST = 1000
    C_PROGRAM_LIST_TITLE = 1001
-->
<window type="dialog">
    <allowoverlay>no</allowoverlay>
    <defaultcontrol always="false">1000</defaultcontrol>
    <coordinates>
        <system>1</system>
        <posx>0</posx>
        <posy>0</posy>
    </coordinates>
    <controls>
        <!-- # Backgrounds -->
        <control type="image">
            <description>background</description>
            <posx>0</posx>
            <posy>0</posy>
            <width>1920</width>
            <height>1080</height>
            <texture>tvg-background.png</texture>
            <visible>true</visible>
        </control>
        <control type="videowindow">
            <description>video window</description>
            <posx>0</posx>
            <posy>0</posy>
            <width>1920</width>
            <height>1080</height>
            <visible>true</visible>
        </control>
        <control type="image">
            <description>background</description>
            <posx>0</posx>
            <posy>0</posy>
            <width>1920</width>
            <height>1080</height>
            <texture>tvg-back-trans.png</texture>
            <visible>true</visible>
        </control>
        <!-- # Title -->
        <control type="label" id="1001">
            <description>Title</description>
            <left>1125</left>
            <top>30</top>
            <width>450</width>
            <height>30</height>
            <textcolor>orange</textcolor>
            <shadowcolor>black</shadowcolor>
            <align>center</align>
            <aligny>center</aligny>
            <label>Title</label>
            <scroll>true</scroll>
        </control>
        <!-- # Displays todays date -->
        <control type="label">
            <description>Displays todays date</description>
            <posx>8r</posx>
            <posy>0</posy>
            <width>420</width>
            <height>45</height>
            <textcolor>bbffffff</textcolor>
            <shadowcolor>black</shadowcolor>
            <align>right</align>
            <aligny>center</aligny>
            <visible>true</visible>
            <label>$INFO[System.Date(DDD)], $INFO[System.Date(dd)] $INFO[System.Date(MMM)]</label>
        </control>
        <!-- # time label -->
        <control type="label">
            <description>time label</description>
            <posx>15r</posx>
            <posy>30</posy>
            <width>300</width>
            <height>45</height>
            <align>right</align>
            <aligny>center</aligny>
            <textcolor>white</textcolor>
            <shadowcolor>black</shadowcolor>
            <label>$INFO[System.Time(hh:mm)]</label>
        </control>
        <!-- # Main Program List -->
        <control type="group">
            <description>Program List</description>
            <visible>true</visible>
            <control type="group">
                <left>0</left>
                <top>0</top>
                <!-- Channel label -->
                <control type="label">
                    <description>Channel label</description>
                    <left>225</left>
                    <top>30</top>
                    <width>270</width>
                    <height>30</height>
                    <textcolor>white</textcolor>
                    <shadowcolor>black</shadowcolor>
                    <align>left</align>
                    <aligny>center</aligny>
                    <label>19148</label>
                </control>
                <!-- Time label -->
                <control type="label">
                    <description>Time label</description>
                    <left>525</left>
                    <top>30</top>
                    <width>300</width>
                    <height>30</height>
                    <textcolor>white</textcolor>
                    <shadowcolor>black</shadowcolor>
                    <align>left</align>
                    <aligny>center</aligny>
                    <label>Start</label>
                </control>
                <!-- Length -->
                <control type="label">
                    <description>Length</description>
                    <left>750</left>
                    <top>30</top>
                    <width>150</width>
                    <height>30</height>
                    <textcolor>white</textcolor>
                    <shadowcolor>black</shadowcolor>
                    <align>right</align>
                    <aligny>center</aligny>
                    <label>Length</label>
                </control>
                <!-- Title -->
                <control type="label">
                    <description>Title</description>
                    <left>1050</left>
                    <top>30</top>
                    <width>825</width>
                    <height>30</height>
                    <textcolor>white</textcolor>
                    <shadowcolor>black</shadowcolor>
                    <align>left</align>
                    <aligny>center</aligny>
                    <label>369</label>
                </control>
                <!-- separator image -->
                <control type="image">
                    <description>separator image</description>
                    <left>0</left>
                    <top>75</top>
                    <width>1920</width>
                    <height>1</height>
                    <colordiffuse>88FFFFFF</colordiffuse>
                    <texture>tvg-seperator.png</texture>
                </control>
                <!-- ## List main everything -->
                <control type="list" id="1000">
                    <viewtype label="19030">list</viewtype>
                    <left>0</left>
                    <top>90</top>
                    <width>1920</width>
                    <height>990</height>
                    <onup>1000</onup>
                    <ondown>1000</ondown>
                    <onleft>noop</onleft>
                    <onright>noop</onright>
                    <pagecontrol>noop</pagecontrol>
                    <itemlayout height="60">
                        <control type="image">
                            <left>0</left>
                            <top>1</top>
                            <width>210</width>
                            <height>57</height>
                            <info>ListItem.Icon</info>
                            <aspectratio>keep</aspectratio>
                        </control>
                        <control type="label">
                            <left>225</left>
                            <top>0</top>
                            <width>300</width>
                            <height>60</height>
                            <textcolor>grey</textcolor>
                            <align>left</align>
                            <aligny>center</aligny>
                            <info>ListItem.Property(ChannelName)</info>
                        </control>
                        <control type="label">
                            <left>525</left>
                            <top>0</top>
                            <width>300</width>
                            <height>60</height>
                            <textcolor>dimgrey</textcolor>
                            <align>left</align>
                            <aligny>center</aligny>
                            <info>ListItem.Property(StartTime)</info>
                        </control>
                        <control type="label">
                            <left>750</left>
                            <top>0</top>
                            <width>150</width>
                            <height>60</height>
                            <textcolor>grey</textcolor>
                            <align>right</align>
                            <aligny>center</aligny>
                            <info>ListItem.Property(Duration)</info>
                        </control>
                        <control type="progress">
                            <left>915</left>
                            <top>30</top>
                            <width>120</width>
                            <height>6</height>
                            <lefttexture />
                            <righttexture />
                            <texturebg>tvg-progress-bg.png</texturebg>
                            <midtexture>tvg-progress-mid.png</midtexture>
                            <info>ListItem.Property(Completed)</info>
                            <visible>ListItem.Property(Completed)</visible>
                        </control>
                        <control type="label">
                            <left>915</left>
                            <top>0</top>
                            <width>150</width>
                            <height>60</height>
                            <font>font12</font>
                            <textcolor>dimgrey</textcolor>
                            <align>left</align>
                            <aligny>center</aligny>
                            <info>ListItem.Property(When)</info>
                        </control>
                        <control type="label">
                            <description>Program Title</description>
                            <left>1050</left>
                            <top>0</top>
                            <width>825</width>
                            <height>60</height>
                            <textcolor>grey</textcolor>
                            <align>left</align>
                            <aligny>center</aligny>
                            <info>ListItem.Label</info>
                        </control>
                    </itemlayout>
                    <focusedlayout height="150">
                        <control type="image">
                            <left>0</left>
                            <top>0</top>
                            <width>1920</width>
                            <height>150</height>
                            <texture>tvg-program-focus.png</texture>
                            <visible>true</visible>
                        </control>
                        <control type="image">
                            <left>0</left>
                            <top>0</top>
                            <width>1920</width>
                            <height>150</height>
                            <texture>black-back.png</texture>
                            <visible>true</visible>
                        </control>
                        <control type="image">
                            <left>0</left>
                            <top>45</top>
                            <width>210</width>
                            <height>60</height>
                            <info>ListItem.Icon</info>
                            <aspectratio>keep</aspectratio>
                        </control>
                        <control type="label">
                            <left>225</left>
                            <top>0</top>
                            <width>300</width>
                            <height>60</height>
                            <textcolor>white</textcolor>
                            <align>left</align>
                            <aligny>center</aligny>
                            <info>ListItem.Property(ChannelName)</info>
                        </control>
                        <control type="label">
                            <left>525</left>
                            <top>0</top>
                            <width>300</width>
                            <height>60</height>
                            <textcolor>dimgrey</textcolor>
                            <align>left</align>
                            <aligny>center</aligny>
                            <info>ListItem.Property(StartTime)</info>
                        </control>
                        <control type="label">
                            <left>750</left>
                            <top>0</top>
                            <width>150</width>
                            <height>60</height>
                            <textcolor>white</textcolor>
                            <align>right</align>
                            <aligny>center</aligny>
                            <info>ListItem.Property(Duration)</info>
                        </control>
                        <control type="progress">
                            <left>915</left>
                            <top>30</top>
                            <width>120</width>
                            <height>6</height>
                            <lefttexture />
                            <righttexture />
                            <texturebg>tvg-progress-bg.png</texturebg>
                            <midtexture>tvg-progress-mid.png</midtexture>
                            <info>ListItem.Property(Completed)</info>
                            <visible>ListItem.Property(Completed)</visible>
                        </control>
                        <control type="label">
                            <left>915</left>
                            <top>0</top>
                            <width>150</width>
                            <height>60</height>
                            <font>font12</font>
                            <textcolor>dimgrey</textcolor>
                            <align>left</align>
                            <aligny>center</aligny>
                            <info>ListItem.Property(When)</info>
                        </control>
                        <control type="image">
                            <left>1545</left>
                            <top>0</top>
                            <width>375</width>
                            <height>150</height>
                            <info>ListItem.Property(ProgramImage)</info>
                            <aspectratio>keep</aspectratio>
                        </control>
                        <control type="label">
                            <description>Program Title</description>
                            <left>1050</left>
                            <top>0</top>
                            <width>825</width>
                            <height>60</height>
                            <textcolor>white</textcolor>
                            <shadowcolor>black</shadowcolor>
                            <align>left</align>
                            <aligny>center</aligny>
                            <info>ListItem.Label</info>
                        </control>
                        <control type="textbox">
                            <description>Plot Value for TVShow</description>
                            <left>225</left>
                            <top>45</top>
                            <width>1290</width>
                            <height>99</height>
                            <font>font12</font>
                            <textcolor>white</textcolor>
                            <align>left</align>
                            <autoscroll time="3600" delay="6000" repeat="6000">true</autoscroll>
                            <pagecontrol>-</pagecontrol>
                            <info>ListItem.Property(Plot)</info>
                        </control>
                    </focusedlayout>
                </control>
            </control>
        </control>
    </controls>
</window>
