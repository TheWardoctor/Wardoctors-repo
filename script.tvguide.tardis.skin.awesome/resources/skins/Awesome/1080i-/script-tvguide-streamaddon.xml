<?xml version="1.0" encoding="utf-8"?>
<!-- # Languages disabled -->
<!--
    C_SELECTION_LIST = 1000
    C_SELECTION_ADDON_LOGO = 4025
    C_SELECTION_ADDON_LABEL = 4026
-->
<window type="dialog">
    <allowoverlay>no</allowoverlay>
    <defaultcontrol always="true">1000</defaultcontrol>
    <animation effect="fade" start="0" end="100" time="250">WindowOpen</animation>
    <animation effect="fade" start="100" end="0" time="250">WindowClose</animation>
    <coordinates>
        <system>1</system>
        <posx>0</posx>
        <posy>0</posy>
    </coordinates>
    <controls>
        <!-- # Backgrounds -->
        <control type="image">
            <posx>0</posx>
            <posy>0</posy>
            <width>1920</width>
            <height>1080</height>
            <texture>black-back.png</texture>
        </control>
        <control type="image">
            <posx>0</posx>
            <posy>0</posy>
            <width>1920</width>
            <height>1080</height>
            <texture>black-back.png</texture>
        </control>
        <!-- # Addon Logo -->
        <control type="image" id="4025">
            <description>Addon Logo</description>
            <posx>30</posx>
            <posy>968</posy>
            <width>255</width>
            <height>75</height>
            <aspectratio>keep</aspectratio>
            <align>left</align>
            <texture>-</texture>
            <visible>true</visible>
        </control>
        <!-- # Addon Name -->
        <control type="label" id="4026">
            <label></label>
            <description>Addon Name</description>
            <posx>300</posx>
            <posy>975</posy>
            <width>360</width>
            <height>60</height>
            <align>left</align>
            <aligny>center</aligny>
            <font>font30_title</font>
            <textcolor>white</textcolor>
            <scroll>true</scroll>
        </control>
        <!-- # Multiple addons provide this channel label -->
        <control type="label" id="4000">
            <posx>495</posx>
            <posy>900</posy>
            <width>900</width>
            <height>120</height>
            <textcolor>ffffffff</textcolor>
            <align>center</align>
            <label>[B]Multiple addons provide this channel. Choose one to watch the stream.[/B]</label>
            <!--<label>[B]$ADDON[script.tvguide.tardis 30700][/B]</label>-->
            <wrapmultiline>true</wrapmultiline>
        </control>
        <!-- # Stream addons main list array -->
        <control type="fixedlist" id="1000">
            <posx>0</posx>
            <posy>450</posy>
            <width>1920</width>
            <height>270</height>
            <viewtype label="list">list</viewtype>
            <orientation>horizontal</orientation>
            <focusposition>3</focusposition>
            <itemlayout width="300" height="300">
                <control type="image">
                    <posx>0</posx>
                    <posy>0</posy>
                    <width>300</width>
                    <height>270</height>
                    <texture>tvg-button-nofocus.png</texture>
                    <visible>false</visible>
                </control>
                <control type="image">
                    <posx>46</posx>
                    <posy>24</posy>
                    <width>192</width>
                    <height>192</height>
                    <info>ListItem.Icon</info>
                </control>
                <control type="label">
                    <posx>0</posx>
                    <posy>225</posy>
                    <width>300</width>
                    <height>60</height>
                    <align>center</align>
                    <font>font10</font>
                    <textcolor>ffffffff</textcolor>
                    <info>ListItem.Label</info>
                </control>
            </itemlayout>
            <focusedlayout width="300" height="300">
                <control type="image">
                    <posx>0</posx>
                    <posy>0</posy>
                    <width>300</width>
                    <height>270</height>
                    <texture>tvg-button-focus.png</texture>
                    <visible>Control.HasFocus(1000)</visible>
                </control>
                <control type="image">
                    <posx>52</posx>
                    <posy>24</posy>
                    <width>192</width>
                    <height>192</height>
                    <aspectratio>keep</aspectratio>
                    <info>ListItem.Icon</info>
                </control>
                <control type="label">
                    <posx>0</posx>
                    <posy>225</posy>
                    <width>300</width>
                    <height>60</height>
                    <align>center</align>
                    <font>font10</font>
                    <textcolor>ffffffff</textcolor>
                    <info>ListItem.Label</info>
                </control>
            </focusedlayout>
        </control>
    </controls>
</window>
