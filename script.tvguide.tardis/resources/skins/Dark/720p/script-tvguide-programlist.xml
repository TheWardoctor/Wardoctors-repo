<?xml version="1.0" encoding="utf-8"?>
<window type="dialog">
    <allowoverlay>no</allowoverlay>
    <defaultcontrol always="false">1000</defaultcontrol>
    <coordinates>
        <system>1</system>
        <posx>0</posx>
        <posy>0</posy>
    </coordinates>

    <controls>

        <control type="image">
            <description>Background</description>
            <left>0</left>
            <top>0</top>
            <width>1280</width>
            <height>720</height>
			<aspectratio>scale</aspectratio>
            <texture fallback="special://profile/addon_data/script.tvguide.tardis/backgrounds/charcoal.png">$VAR[GlobalFanartVar]</texture>
            <visible>true</visible>
        </control>
		<control type="image">
            <description>Mount</description>
            <left>0</left>
            <top>0</top>
            <width>1280</width>
            <height>720</height>
			<aspectratio>scale</aspectratio>
            <texture>black-back.png</texture>
            <visible>true</visible>
        </control>
		<control type="image">
            <description>Header Trim</description>
            <left>0</left>
            <top>58</top>
            <width>1280</width>
            <height>1</height>
            <texture>aqua.png</texture>
			<visible>true</visible>
        </control>

        <!-- Header - Date and time display -->
		<control type="group">
			<left>0</left>
			<top>0</top>
			<width>1280</width>
			<height>60</height>
			<visible>true</visible>
			<control type="label">
				<description>Displays todays date</description>
				<left>1000</left>
				<top>25</top>
				<width>270</width>
				<height>20</height>
				<textcolor>white</textcolor>
				<font>font12</font>
				<align>right</align>
				<label>$INFO[System.Date]</label>
				<visible>true</visible>
			</control>
			<control type="label">
				<description>Display current time</description>
				<left>1030</left>
				<top>5</top>
				<width>240</width>
				<height>20</height>
				<align>right</align>
				<font>font13_title</font>
				<textcolor>white</textcolor>
				<label>$INFO[System.Time]</label>
			</control>
		</control>
		<control type="label">
			<description>Display current temperature</description>
			<left>1095</left>
			<top>5</top>
			<width>60</width>
			<height>20</height>
			<align>right</align>
			<font>font13_title</font>
			<textcolor>white</textcolor>
			<label>$INFO[Window(Weather).Property(Current.Temperature)]$INFO[System.TemperatureUnits]</label>
            <visible>Skin.HasSetting(show_weatherinfo) + Weather.IsFetched + ![String.IsEqual(Weather.FanartCode,na) + String.Contains(Weather.Conditions,/)]</visible>
		</control>
		<control type="image">
			<description>Display current weather icon</description>
            <left>1128</left>
			<top>1</top>
			<width>60</width>
			<height>35</height>
            <fadetime>300</fadetime>
            <aspectratio align="right">keep</aspectratio>
            <texture colordiffuse="button_focus">weather/small/$INFO[Weather.FanartCode].png</texture>
            <visible>Skin.HasSetting(show_weatherinfo) + Weather.IsFetched + ![String.IsEqual(Weather.FanartCode,na) + String.Contains(Weather.Conditions,/)]</visible>
        </control>

        <control type="group">
            <description>Program List</description>
            <visible>true</visible>
            <control type="group">
                <left>0</left>
                <top>0</top>
                <control type="label" id="1001">
                    <description>Channel label</description>
                    <left>100</left>
                    <top>20</top>
                    <width>180</width>
                    <height>20</height>
                    <font>font13_title</font>
                    <textcolor>white</textcolor>
                    <align>left</align>
                    <aligny>center</aligny>
                    <label>19148</label>
                </control>
                <control type="label">
                    <description>Time label</description>
                    <left>300</left>
                    <top>20</top>
                    <width>200</width>
                    <height>20</height>
                    <font>font13_title</font>
                    <textcolor>white</textcolor>
                    <align>left</align>
                    <aligny>center</aligny>
                    <label>Start</label>
                </control>
                <control type="label">
                    <description>Length</description>
                    <left>500</left>
                    <top>20</top>
                    <width>100</width>
                    <height>20</height>
                    <font>font13_title</font>
                    <textcolor>white</textcolor>
					<align>right</align>
                    <aligny>center</aligny>
                    <label>Length</label>
                </control>
                <control type="label">
                    <description>Title</description>
                    <left>700</left>
                    <top>20</top>
                    <width>550</width>
                    <height>20</height>
                    <font>font13_title</font>
                    <textcolor>white</textcolor>
                    <align>left</align>
                    <aligny>center</aligny>
                    <label>369</label>
                </control>

                <control type="list" id="1000">
                    <viewtype label="19030">list</viewtype>
                    <left>0</left>
                    <top>60</top>
                    <width>1280</width>
                    <height>660</height>
                    <onup>1000</onup>
                    <ondown>1000</ondown>
                    <onleft>-</onleft>
                    <onright>-</onright>
                    <pagecontrol>-</pagecontrol>
                    <itemlayout height="40">
                        <control type="image">
                            <left>10</left>
                            <top>0</top>
                            <width>80</width>
                            <height>40</height>
                            <info>ListItem.Icon</info>
                            <aspectratio>keep</aspectratio>
                        </control>
                        <control type="label">
                            <left>100</left>
                            <top>0</top>
                            <width>200</width>
                            <height>40</height>
                            <font>font13</font>
                            <align>left</align>
                            <aligny>center</aligny>
                            <info>ListItem.Property(ChannelName)</info>
                        </control>
                        <control type="label">
                            <left>300</left>
                            <top>0</top>
                            <width>200</width>
                            <height>40</height>
                            <font>font13</font>
                            <align>left</align>
                            <aligny>center</aligny>
                            <info>ListItem.Property(StartTime)</info>
                        </control>
                        <control type="label">
                            <left>500</left>
                            <top>0</top>
                            <width>100</width>
                            <height>40</height>
                            <font>font13</font>
                            <align>right</align>
                            <aligny>center</aligny>
                            <info>ListItem.Property(Duration)</info>
                        </control>
                        <control type="progress">
                            <left>610</left>
                            <top>15</top>
                            <width>80</width>
                            <height>10</height>
                            <lefttexture />
                            <righttexture />
                            <texturebg >tvg-progress-bg.png</texturebg>
                            <midtexture >tvg-progress-mid.png</midtexture>
                            <info>ListItem.Property(Completed)</info>
                            <visible>ListItem.Property(Completed)</visible>
                        </control>
                        <control type="label">
                            <left>610</left>
                            <top>0</top>
                            <width>100</width>
                            <height>40</height>
                            <font>font12</font>
                            <textcolor>grey</textcolor>
                            <align>left</align>
                            <aligny>center</aligny>
                            <info>ListItem.Property(When)</info>
                        </control>
                        <control type="label">
                            <description>Program Title</description>
                            <left>700</left>
                            <top>0</top>
                            <width>550</width>
                            <height>40</height>
                            <font>font13</font>
                            <align>left</align>
                            <aligny>center</aligny>
                            <info>ListItem.Label</info>
                        </control>
                    </itemlayout>
                    <focusedlayout height="100">
                        <control type="image">
                            <left>0</left>
                            <top>0</top>
                            <width>1280</width>
                            <height>100</height>
                            <texture>tvg-button-focus.png</texture>
                        </control>
                        <control type="image">
                            <left>10</left>
                            <top>30</top>
                            <width>80</width>
                            <height>40</height>
                            <info>ListItem.Icon</info>
                            <aspectratio>keep</aspectratio>
                        </control>
                        <control type="label">
                            <left>100</left>
                            <top>0</top>
                            <width>200</width>
                            <height>40</height>
                            <font>font13</font>
                            <textcolor>cyan</textcolor>
                            <align>left</align>
                            <aligny>center</aligny>
                            <info>ListItem.Property(ChannelName)</info>
                        </control>
                        <control type="label">
                            <left>300</left>
                            <top>0</top>
                            <width>200</width>
                            <height>40</height>
                            <font>font13</font>
                            <textcolor>cyan</textcolor>
                            <align>left</align>
                            <aligny>center</aligny>
                            <info>ListItem.Property(StartTime)</info>
                        </control>
                        <control type="label">
                            <left>500</left>
                            <top>0</top>
                            <width>100</width>
                            <height>40</height>
                            <font>font13</font>
                            <textcolor>cyan</textcolor>
                            <align>right</align>
                            <aligny>center</aligny>
                            <info>ListItem.Property(Duration)</info>
                        </control>
                        <control type="progress">
                            <left>610</left>
                            <top>15</top>
                            <width>80</width>
                            <height>10</height>
                            <lefttexture />
                            <righttexture />
                            <texturebg >tvg-progress-bg.png</texturebg>
                            <midtexture >tvg-progress-mid.png</midtexture>
                            <info>ListItem.Property(Completed)</info>
                            <visible>ListItem.Property(Completed)</visible>
                        </control>
                        <control type="label">
                            <left>610</left>
                            <top>0</top>
                            <width>100</width>
                            <height>40</height>
                            <font>font12</font>
                            <textcolor>grey</textcolor>
                            <align>left</align>
                            <aligny>center</aligny>
                            <info>ListItem.Property(When)</info>
                        </control>                        
                        <control type="label">
                            <description>Program Title</description>
                            <left>700</left>
                            <top>0</top>
                            <width>550</width>
                            <height>40</height>
                            <font>font13</font>
                            <textcolor>cyan</textcolor>
                            <align>left</align>
                            <aligny>center</aligny>
                            <info>ListItem.Label</info>
                        </control>
                        <control type="textbox">
                            <description>Plot Value for TVShow</description>
                            <left>100</left>
                            <top>30</top>
                            <width>960</width>
                            <height>58</height>
                            <font>font12</font>
                            <align>left</align>
                            <wrapmultiline>true</wrapmultiline>
                            <autoscroll time="3600" delay="6000" repeat="6000">true</autoscroll>
                            <pagecontrol>-</pagecontrol>
                            <info>ListItem.Property(Plot)</info>
                        </control>
                        <control type="image">
                            <left>1080</left>
                            <top>0</top>
                            <width>200</width>
                            <height>100</height>
                            <info>ListItem.Property(ProgramImage)</info>
                            <aspectratio>keep</aspectratio>
                        </control>
                    </focusedlayout>
                </control>
            </control>
        </control>
    </controls>
</window>