<?xml version="1.0" encoding="utf-8"?>
<window type="dialog">
    <allowoverlay>no</allowoverlay>
    <defaultcontrol always="true">1000</defaultcontrol>
    <coordinates>
        <system>1</system>
        <posx>0</posx>
        <posy>0</posy>
    </coordinates>
    <animation effect="fade" start="0" end="100" time="250">WindowOpen</animation>
    <animation effect="fade" start="100" end="0" time="250">WindowClose</animation>
    <controls>

        <control type="image">
			<!-- Background image-->
			<description>Background</description>
			<left>0</left>
            <top>0</top>
            <width>1280</width>
            <height>720</height>
			<texture fallback="special://profile/addon_data/script.tvguide.tardis/backgrounds/charcoal.png">$VAR[GlobalFanartVar]</texture>
        </control>
        <!-- Mount image-->	
		<control type="image">
			<description>Mount image</description>
			<left>0</left>
			<top>0</top>
			<width>1280</width>
			<height>720</height>
			<texture>black-back.png</texture>
			<visible>true</visible>
		</control>
		<control type="image">
			<description>Header Trim</description>
			<left>0</left>
			<top>58</top>
			<width>1280</width>
			<height>1</height>
			<texture>aqua.png</texture>
			<visible>true</visible>
		</control>
		
		<!-- Heade Inforamtion -->
		<control type="group">
			<left>0</left>
			<top>0</top>
			<width>1280</width>
			<height>60</height>
			<visible>true</visible>
			<control type="label">
				<description>Displays todays date</description>
				<left>1000</left>
				<top>25</top>
				<width>270</width>
				<height>20</height>
				<textcolor>white</textcolor>
				<font>font12</font>
				<align>right</align>
				<label>$INFO[System.Date]</label>
				<visible>true</visible>
			</control>
			<control type="label">
				<description>Display current time</description>
				<left>1030</left>
				<top>5</top>
				<width>240</width>
				<height>20</height>
				<align>right</align>
				<font>font13_title</font>
				<textcolor>white</textcolor>
				<label>$INFO[System.Time]</label>
			</control>
		</control>
		<control type="label">
			<description>Display current temperature</description>
			<left>1095</left>
			<top>5</top>
			<width>60</width>
			<height>20</height>
			<align>right</align>
			<font>font13_title</font>
			<textcolor>white</textcolor>
			<label>$INFO[Window(Weather).Property(Current.Temperature)]$INFO[System.TemperatureUnits]</label>
            <visible>Skin.HasSetting(show_weatherinfo) + Weather.IsFetched + ![String.IsEqual(Weather.FanartCode,na) + String.Contains(Weather.Conditions,/)]</visible>
		</control>
		<control type="image">
			<description>Display current weather icon</description>
            <left>1128</left>
			<top>1</top>
			<width>60</width>
			<height>35</height>
            <fadetime>300</fadetime>
            <aspectratio align="right">keep</aspectratio>
            <texture colordiffuse="button_focus">weather/small/$INFO[Weather.FanartCode].png</texture>
            <visible>Skin.HasSetting(show_weatherinfo) + Weather.IsFetched + ![String.IsEqual(Weather.FanartCode,na) + String.Contains(Weather.Conditions,/)]</visible>
        </control>
		
        <control type="label" id="4000">
            <posx>330</posx>
            <posy>400</posy>
            <width>600</width>
            <height>80</height>
            <textcolor>white</textcolor>
            <font>font13</font>
            <align>center</align>
            <label>[B]$ADDON[script.tvguide.tardis 30700][/B]</label>
            <wrapmultiline>true</wrapmultiline>
        </control>

        <control type="fixedlist" id="1000">
            <posx>160</posx>
            <posy>200</posy>
            <width>950</width>
            <height>170</height>
            <viewtype label="list">list</viewtype>
            <orientation>horizontal</orientation>
            <focusposition>2</focusposition>

            <itemlayout width="200" height="200">
                <control type="image">
                    <posx>0</posx>
                    <posy>0</posy>
                    <width>200</width>
                    <height>180</height>
                    <texture>menu-grey.png</texture>
                    <visible>true</visible>
                </control>
                <control type="image">
                    <posx>31</posx>
                    <posy>16</posy>
                    <width>128</width>
                    <height>128</height>
                    <info>ListItem.Icon</info>
                </control>
                <control type="label">
                    <posx>15</posx>
                    <posy>140</posy>
                    <width>170</width>
                    <height>40</height>
                    <align>center</align>
                    <font>font13</font>
                    <textcolor>white</textcolor>
                    <info>ListItem.Label</info>
                </control>
            </itemlayout>
            <focusedlayout width="200" height="200">
                <control type="image">
                    <posx>0</posx>
                    <posy>-5</posy>
                    <width>200</width>
                    <height>180</height>
                    <texture>menu-grey-focus.png</texture>
                    <visible>Control.HasFocus(1000)</visible>
                </control>
                <control type="image">
                    <posx>31</posx>
                    <posy>16</posy>
                    <width>128</width>
                    <height>128</height>
                    <info>ListItem.Icon</info>
                </control>
                <control type="label">
                    <posx>15</posx>
                    <posy>140</posy>
                    <width>170</width>
                    <height>40</height>
                    <align>center</align>
                    <font>font13</font>
                    <textcolor>white</textcolor>
                    <info>ListItem.Label</info>
					<scroll>true</scroll>
				 </control>
            </focusedlayout>
        </control>
    </controls>
</window>
