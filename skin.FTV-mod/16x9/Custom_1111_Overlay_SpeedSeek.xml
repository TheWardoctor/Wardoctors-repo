<?xml version="1.0" encoding="UTF-8"?>
<window id="1111" type="dialog">
	<zorder>99</zorder>
	<visible>[VideoPlayer.IsFullscreen | Window.IsVisible(visualisation)] + [Player.IsTempo | !String.IsEmpty(Player.SeekNumeric)]</visible>
	<controls>
		<control id="2" type="group">
			<left>60</left>
			<top>60</top>
			<!-- Tempo -->
			<control type="group">
				<visible>String.IsEmpty(Player.SeekNumeric)</visible>
				<animation condition="[System.IdleTime(2) + !Window.IsVisible(videoosd) + !Window.IsVisible(seekbar)]" reversible="false" type="Conditional">
					<effect type="fade" start="100" end="0" time="200" />
				</animation>
				<control id="2" type="image">
					<width>260</width>
					<height>71</height>
					<texture>osd/progress_box_tempo.png</texture>
				</control>
				<control id="2" type="image">
					<left>20</left>
					<top>18</top>
					<width>115</width>
					<height>33</height>
					<texture>$VAR[SpeedStepIcon]</texture>
				</control>
				<control id="2" type="label">
					<left>160</left>
					<top>14</top>
					<height>30</height>
					<aligny>top</aligny>
					<font>OSD32</font>
					<textcolor>ffffffff</textcolor>
					<label>$INFO[Player.PlaySpeed,,x]</label>
				</control>
			</control>
			<!-- Seek Numeric -->
			<control type="group">				
				<visible>!String.IsEmpty(Player.SeekNumeric)</visible>
				<control id="2" type="image">
					<width>260</width>
					<height>71</height>
					<texture>osd/progress_box_tempo.png</texture>
				</control>
				<control id="2" type="label">
					<top>14</top>
					<left>0</left>
					<height>30</height>
					<width>260</width>
					<aligny>top</aligny>
					<font>OSD32</font>
					<textcolor>ffffffff</textcolor>
					<label>$INFO[Player.SeekNumeric]</label>
					<align>center</align>
				</control>
			</control>
		</control>
	</controls>
</window>