<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- fullscreeninfo -->
	<defaultcontrol always="true">101</defaultcontrol>
	<onload>Control.Move(100,$INFO[Container(100).CurrentItem,-])</onload>
	<onload>Control.Move(100,1)</onload>
	<onunload>ClearProperty(ShowXray,home)</onunload>
	<controls>
		<!--Xray Control -->
		<control type="button" id="101">
			<include>HiddenControl</include>
			<onleft condition="!String.IsEqual(Container(100).CurrentItem,1) + !Player.Rewinding + !Player.Forwarding">Control.Move(100,-1)</onleft>
			<onleft condition="!Window.IsVisible(1108) + String.IsEqual(Container(100).CurrentItem,1) + !Player.Rewinding + !Player.Forwarding">SetProperty(BounceLeft,1,Home)</onleft>
			<onright condition="!String.IsEqual(Container(100).Position,3) + !Player.Rewinding + !Player.Forwarding">Control.Move(100,1)</onright>
			<onright condition="!Window.IsVisible(1103) + String.IsEqual(Container(100).Position,3) + !Player.Rewinding + !Player.Forwarding">SetProperty(BounceRight,1,Home)</onright>
			<ondown>close</ondown>
			<onclick condition="!Player.Rewinding + !Player.Forwarding">SetProperty(ShowOptions,1,home)</onclick>
			<onclick condition="!Player.Rewinding + !Player.Forwarding">Dialog.Close(fullscreeninfo,true)</onclick>
			<onclick condition="!Player.Rewinding + !Player.Forwarding">ActivateWindow(VideoOSD)</onclick>
			<onup condition="[Integer.IsGreater(Container(100).NumItems,0) + !Player.Rewinding + !Player.Forwarding] | [VideoPlayer.Content(livetv) + !String.IsEmpty(VideoPlayer.Plot)]">SetProperty(ShowXRay,true,home)</onup>
			<onup condition="Integer.IsGreater(Container(100).NumItems,0) + !Player.Rewinding + !Player.Forwarding">RunScript(script.extendedinfo,info=extendedactorinfo,name=$INFO[Container(100).ListItem.Label])</onup>
			<onup condition="VideoPlayer.Content(livetv) + !String.IsEmpty(VideoPlayer.Plot)">ActivateWindow(1113)</onup>
			<ondown condition="[VideoPlayer.Content(movies) | VideoPlayer.Content(episodes)] + !Player.Rewinding + !Player.Forwarding">SetProperty(ShowXRay,true,home)</ondown>
			<ondown condition="[VideoPlayer.Content(movies) | VideoPlayer.Content(episodes)] + !Player.Rewinding + !Player.Forwarding">ActivateWindow(1114)</ondown>
		</control>
		<!--Fullscreen Info-->
		<control type="group">
			<visible>!Window.IsActive(videoosd) + !Window.IsVisible(playerprocessinfo) + String.IsEmpty(Window(home).Property(ShowXRay))</visible>
			<animation effect="fade" start="100" end="0" time="0">Hidden</animation>
			<include>PlayerTitles</include>
			<!-- Pause -->
			<control type="image">
				<centerleft>50%</centerleft>
				<centertop>50%</centertop>
				<width>321</width>
				<height>341</height>
				<texture>osd/Pause.png</texture>				
				<visible>Player.Paused + !Player.Caching</visible>
			</control>
			<control type="image">
				<bottom>0</bottom>
				<width>1980</width>
				<height>120</height>
				<texture>osd/mask.png</texture>
			</control>
			<!--  Cache bar -->
			<control type="progress">
				<left>92</left>
				<bottom>93</bottom>
				<width>1735</width>
				<height>11</height>
				<reveal>true</reveal>
				<info>Player.ProgressCache</info>
				<texturebg border="4">osd/progress_back.png</texturebg>
				<lefttexture>-</lefttexture>
				<midtexture border="4">osd/progress_cache.png</midtexture>
				<righttexture>-</righttexture>
				<overlaytexture>-</overlaytexture>
			</control>
			<!--  Progress bar -->
			<control type="progress">
				<left>92</left>
				<bottom>93</bottom>
				<width>1735</width>
				<height>11</height>
				<reveal>true</reveal>
				<info>Player.Progress</info>
				<texturebg border="4" colordiffuse="00ffffff">osd/progress_back.png</texturebg>
				<lefttexture>-</lefttexture>
				<midtexture border="4">osd/progress_bar.png</midtexture>
				<righttexture>-</righttexture>
				<overlaytexture>-</overlaytexture>
			</control>
			<!-- Duration Labels -->
			<include>PlayerDurationLabels</include>
		</control>
		<!--XRay-->
		<control type="group">
			<visible>!Window.IsVisible(videoosd) + !Window.IsVisible(videobookmarks) + !Window.IsVisible(playerprocessinfo) + String.IsEmpty(Window(home).Property(ShowXRay)) + !Player.ShowInfo</visible>
			<!--Xray Icon-->
			<control id="99" type="grouplist">
				<visible>!Player.Rewinding + !Player.Forwarding</visible>
				<right>92</right>
				<bottom>40</bottom>
				<height>40</height>
				<itemgap>10</itemgap>
				<align>right</align>
				<orientation>horizontal</orientation>
				<usecontrolcoords>true</usecontrolcoords>
				<control id="99" type="label">
					<top>4</top>
					<width>auto</width>
					<height>30</height>
					<font>Reg27</font>
					<textcolor>fff3f3f3</textcolor>
					<label>$LOCALIZE[31319]</label>
					<visible>Container(100).IsUpdating</visible>
				</control>
				<control id="99" type="image">
					<width>40</width>
					<height>40</height>
					<texture>osd/x_ray_empty.png</texture>
					<animation effect="fade" time="500" end="30" start="100" condition="true" pulse="true">Conditional</animation>
					<visible>Container(100).IsUpdating</visible>
				</control>
				<control id="99" type="label">
					<top>4</top>
					<width>auto</width>
					<height>30</height>
					<font>Reg27</font>
					<textcolor>fff3f3f3</textcolor>
					<label>$LOCALIZE[31241]</label>
					<visible>Integer.IsGreater(Container(100).NumItems,0) + !Container(100).IsUpdating</visible>
				</control>
				<control id="99" type="label">
					<top>4</top>
					<width>auto</width>
					<height>30</height>
					<font>Reg27</font>
					<textcolor>fff3f3f3</textcolor>
					<label>$LOCALIZE[31338]</label>
					<visible>VideoPlayer.Content(livetv) + !String.IsEmpty(VideoPlayer.Plot)</visible>
				</control>
				<control id="99" type="image">
					<width>40</width>
					<height>40</height>
					<texture>osd/x_ray.png</texture>
					<visible>[VideoPlayer.Content(livetv) + !String.IsEmpty(VideoPlayer.Plot)] | [Integer.IsGreater(Container(100).NumItems,0) + !Container(100).IsUpdating]</visible>
				</control>
				<control id="99" type="label">
					<top>4</top>
					<width>auto</width>
					<height>30</height>
					<font>Reg27</font>
					<textcolor>fff3f3f3</textcolor>
					<label>    $LOCALIZE[31234]</label>
					<visible>[VideoPlayer.Content(movies) | VideoPlayer.Content(episodes)] + !Player.Rewinding + !Player.Forwarding</visible>
				</control>
				<control id="99" type="image">
					<width>40</width>
					<height>40</height>
					<texture flipy="true">osd/x_ray.png</texture>
					<visible>[VideoPlayer.Content(movies) | VideoPlayer.Content(episodes)] + !Player.Rewinding + !Player.Forwarding</visible>
				</control>
				<control id="99" type="label">
					<top>4</top>
					<width>auto</width>
					<height>30</height>
					<font>Reg27</font>
					<textcolor>fff3f3f3</textcolor>
					<label>    $LOCALIZE[33063]</label>
				</control>
				<control id="99" type="image">
					<width>40</width>
					<height>40</height>
					<texture>osd/select.png</texture>
				</control>
			</control>
			<!--Cast-->
			<control type="group">
				<animation effect="fade" time="0" start="100" end="0" condition="Container(100).IsUpdating | Player.Rewinding | Player.Forwarding">Conditional</animation>
				<visible>String.IsEmpty(Window(home).Property(ShowXRay))</visible>
				<control id="100" type="fixedlist">
					<width>1920</width>
					<left>0</left>
					<bottom>136</bottom>
					<height>128</height>
					<onleft>noop</onleft>
					<onright>noop</onright>
					<defaultcontrol always="true">0</defaultcontrol>
					<preloaditems>2</preloaditems>
					<focusposition>0</focusposition>
					<movement>3</movement>
					<orientation>horizontal</orientation>
					<include>ViewTypeBounceAnimation</include>
					<scrolltime easing="inout" tween="sine">300</scrolltime>		
					<itemlayout height="128" width="442">
						<control type="group">
							<left>90</left>
							<control type="image">
								<width>412</width>
								<height>128</height>
								<texture>dialogs/DialogBackground.png</texture>
							</control>
							<control type="image">
								<width>96</width>
								<height>128</height>
								<aspectratio align="center">scale</aspectratio>
								<texture background="true">views/cast_fallback.png</texture>
							</control>
							<control type="image">
								<width>96</width>
								<height>128</height>
								<aspectratio align="center">scale</aspectratio>
								<texture background="true">$INFO[ListItem.Icon]</texture>
							</control>
							<control type="label">
								<left>116</left>
								<top>27</top>
								<width>278</width>
								<height>40</height>
								<font>Reg32</font>
								<textcolor>ffffffff</textcolor>
								<shadowcolor>80000000</shadowcolor>
								<label>$INFO[ListItem.Label]</label>
							</control>
							<control type="label">
								<left>116</left>
								<top>66</top>
								<width>278</width>
								<height>36</height>
								<font>Light26</font>
								<scroll>false</scroll>
								<textcolor>ffffffff</textcolor>
								<shadowcolor>80000000</shadowcolor>
								<label fallback="31329">$INFO[ListItem.Label2]</label>
							</control>
						</control>
					</itemlayout>
					<focusedlayout height="128" width="442">
						<control type="group">
							<left>90</left>
							<control type="image">
								<width>412</width>
								<height>128</height>
								<texture>dialogs/DialogBackground.png</texture>
							</control>
							<control type="image">
								<width>96</width>
								<height>128</height>
								<aspectratio align="center">scale</aspectratio>
								<texture background="true">views/cast_fallback.png</texture>
							</control>
							<control type="image">
								<width>96</width>
								<height>128</height>
								<aspectratio align="center">scale</aspectratio>
								<texture background="true">$INFO[ListItem.Icon]</texture>
							</control>
							<control type="label">
								<left>116</left>
								<top>27</top>
								<width>278</width>
								<height>40</height>
								<font>Reg32</font>
								<scroll>false</scroll>
								<textcolor>ftvgold</textcolor>
								<shadowcolor>80000000</shadowcolor>
								<label>$INFO[ListItem.Label]</label>
							</control>
							<control type="label">
								<left>116</left>
								<top>66</top>
								<width>278</width>
								<height>36</height>
								<font>Light26</font>
								<scroll>false</scroll>
								<textcolor>ffffffff</textcolor>
								<shadowcolor>80000000</shadowcolor>
								<label fallback="31329">$INFO[ListItem.Label2]</label>
							</control>
						</control>
					</focusedlayout>
					<content>$VAR[XrayCast]</content>
				</control>
			</control>
		</control>
	</controls>
</window>