<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- favourites -->
	<backgroundcolor>0xff12161b</backgroundcolor>
	<defaultcontrol always="true">450</defaultcontrol>
	<!--onload>SetProperty(MainMenuFocus,1,home)</onload>-->
	<onload>Control.Move(450,$INFO[Container(450).CurrentItem,-])</onload>
	<onload>Control.Move(450,1)</onload>
	<!-- workaround animation to fix the rare broken WindowOpen animations -->
	<controls>
		<include>BackgroundImage</include>
		<!-- Heading / Current item / Total items -->
		<control type="group">
			<animation delay="400" easing="inout" effect="fade" end="100" start="0" time="120" tween="sine" reversible="false">WindowOpen</animation>
			<animation effect="fade" end="0" start="100" time="0">WindowClose</animation>
			<control type="grouplist">
				<left>198</left>
				<top>134</top>
				<height>80</height>
				<itemgap>10</itemgap>
				<orientation>horizontal</orientation>
				<usecontrolcoords>true</usecontrolcoords>
				<visible>!String.IsEmpty(Container(450).NumItems)</visible>
				<control type="label">
					<width>auto</width>
					<height>60</height>
					<font>Med48</font>
					<aligny>bottom</aligny>
					<textcolor>ffdadada</textcolor>
					<label>$LOCALIZE[1036]  </label>
				</control>
				<control type="label">
					<top>15</top>
					<width>auto</width>
					<height>60</height>
					<font>Med32</font>
					<aligny>bottom</aligny>
					<textcolor>ffdadada</textcolor>
					<label>$INFO[Container(450).CurrentItem]</label>
					<visible>Integer.IsGreater(Container(450).NumItems,0)</visible>
				</control>
				<control type="label">
					<top>14</top>
					<width>auto</width>
					<height>60</height>
					<font>Light36</font>
					<aligny>bottom</aligny>
					<textcolor>ff505050</textcolor>
					<label>|</label>
					<visible>Integer.IsGreater(Container(450).NumItems,0)</visible>
				</control>
				<control type="label">
					<top>15</top>
					<width>auto</width>
					<height>60</height>
					<font>Light32</font>
					<aligny>bottom</aligny>
					<textcolor>ff505050</textcolor>
					<label>$INFO[Container(450).NumItems]</label>
					<visible>Integer.IsGreater(Container(450).NumItems,0)</visible>
				</control>			
			</control>
			<!-- Label -->
			<control type="label">
				<left>198</left>
				<top>206</top>
				<width max="1610">auto</width>
				<height>64</height>
				<aligny>top</aligny>
				<wrapmultiline>true</wrapmultiline>
				<font>Med32</font>
				<autoscroll>false</autoscroll>
				<textcolor>ffbebebe</textcolor>
				<label>$INFO[ListItem.Label]</label>
				<visible>[!String.IsEmpty(Window(Home).Property(WidgetHasFocus)) + String.IsEqual(Window(Home).Property(ForceViewType),poster) + !String.IsEqual(Window(Home).Property(ForceViewType),wide)] | [String.IsEmpty(Window(Home).Property(WidgetHasFocus)) + String.IsEqual(Skin.String(FavouritesLayout),$LOCALIZE[31160])]</visible>
			</control>
		</control>
		<!-- Square -->
		<control type="group">
			<include condition="[!String.IsEmpty(Window(Home).Property(WidgetHasFocus)) + !String.IsEqual(Window(Home).Property(ForceViewType),poster) + !String.IsEqual(Window(Home).Property(ForceViewType),wide)] | [String.IsEmpty(Window(Home).Property(WidgetHasFocus)) + [String.IsEqual(Skin.String(FavouritesLayout),$LOCALIZE[31203]) | String.IsEmpty(Skin.String(FavouritesLayout))]]" content="ViewFavourites">
				<param name="left">-238</param>
				<param name="width">2200</param>
				<param name="layout">ViewSquareInfoLayout</param>
			</include>
		</control>
		<!-- Poster -->
		<control type="group">
			<include condition="[!String.IsEmpty(Window(Home).Property(WidgetHasFocus)) + String.IsEqual(Window(Home).Property(ForceViewType),poster) + !String.IsEqual(Window(Home).Property(ForceViewType),wide)] | [String.IsEmpty(Window(Home).Property(WidgetHasFocus)) + String.IsEqual(Skin.String(FavouritesLayout),$LOCALIZE[31160])]" content="ViewFavourites">
				<param name="left">-102</param>
				<param name="width">2036</param>
				<param name="layout">ViewPosterLayout</param>
			</include>
		</control>
		<!--Wide-->
		<control type="group">
			<include condition="[!String.IsEmpty(Window(Home).Property(WidgetHasFocus)) + !String.IsEqual(Window(Home).Property(ForceViewType),poster) + String.IsEqual(Window(Home).Property(ForceViewType),wide)] | [String.IsEmpty(Window(Home).Property(WidgetHasFocus)) + String.IsEqual(Skin.String(FavouritesLayout),$LOCALIZE[31159])]" content="ViewFavourites">
				<param name="left">-374</param>
				<param name="width">2344</param>
				<param name="layout">ViewDefaultWideLayout</param>
			</include>
		</control>
	</controls>
</window>