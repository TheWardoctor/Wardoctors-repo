<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- visualisation -->
	<backgroundcolor>0xff12161b</backgroundcolor>
	<defaultcontrol>-</defaultcontrol>	
	<controls>
		<!-- Visualisation -->
		<control id="2" type="visualisation">
			<include>FullscreenDimensions</include>
			<visible>Visualisation.Enabled</visible>
		</control>
		<!-- Fanart -->
		<control type="image">
			<include>FullscreenDimensions</include>
			<fadetime>400</fadetime>
			<colordiffuse>26ffffff</colordiffuse>
			<texture fallback="special://skin/extras/backgrounds/music_visualiser.jpg" background="true">$INFO[Window(Home).Property(SkinHelper.Player.Art.Fanart)]</texture>
			<include>VisAnimation</include>
			<visible>!Skin.HasSetting(VisFanartDisabled) + [!Skin.HasSetting(VisRandomFanart) | String.IsEmpty(Window(Home).Property(SkinHelper.Player.Art.ExtraFanArt))]</visible>
		</control>
		<control type="multiimage">
			<include>FullscreenDimensions</include>
			<fadetime>400</fadetime>
			<randomize>true</randomize>
			<aspectratio>scale</aspectratio>
			<timeperimage>10000</timeperimage>
			<colordiffuse>26ffffff</colordiffuse>
			<imagepath background="true">$INFO[Window(Home).Property(SkinHelper.Player.Art.ExtraFanArt)]</imagepath>
			<include>VisAnimation</include>
			<visible>Skin.HasSetting(VisRandomFanart) + !Skin.HasSetting(VisFanartDisabled)</visible>
		</control>
		<control type="group">
			<visible>!Window.IsActive(seekbar) + !Window.IsActive(musicosd) + Player.ShowInfo</visible>
			<!-- Heading / Current item / Total items -->
			<control type="grouplist">
				<left>198</left>
				<top>134</top>
				<height>80</height>
				<itemgap>10</itemgap>
				<orientation>horizontal</orientation>
				<usecontrolcoords>true</usecontrolcoords>
				<control type="label">
					<width>auto</width>
					<height>60</height>
					<font>Med48</font>
					<aligny>bottom</aligny>
					<textcolor>ffdadada</textcolor>
					<shadowcolor>ff000000</shadowcolor>
					<label>$LOCALIZE[31106]  </label>
				</control>
				<control type="label">
					<top>15</top>
					<width>auto</width>
					<height>60</height>
					<font>Med32</font>
					<aligny>bottom</aligny>
					<textcolor>ffdadada</textcolor>
					<shadowcolor>ff000000</shadowcolor>
					<label>$INFO[MusicPlayer.PlaylistPosition]</label>
					<visible>Integer.IsGreater(MusicPlayer.PlaylistLength,1)</visible>
				</control>
				<control type="label">
					<top>14</top>
					<width>auto</width>
					<height>60</height>
					<font>Light36</font>
					<aligny>bottom</aligny>
					<textcolor>ffdadada</textcolor>
					<shadowcolor>ff000000</shadowcolor>
					<visible>Integer.IsGreater(MusicPlayer.PlaylistLength,1)</visible>
					<label>|</label>
				</control>
				<control type="label">
					<top>15</top>
					<width>auto</width>
					<height>60</height>
					<font>Light32</font>
					<aligny>bottom</aligny>
					<textcolor>ffdadada</textcolor>
					<shadowcolor>ff000000</shadowcolor>
					<label>$INFO[MusicPlayer.PlaylistLength]</label>
					<visible>Integer.IsGreater(MusicPlayer.PlaylistLength,1)</visible>
				</control>
			</control>
			<!-- Title -->
			<control type="label">
				<left>198</left>
				<top>200</top>
				<width>auto</width>
				<height>26</height>
				<font>Med26</font>
				<textcolor>ffbebebe</textcolor>
				<shadowcolor>ff000000</shadowcolor>
				<label>$INFO[MusicPlayer.Title]</label>
			</control>
			<!-- Cover -->
			<control type="group">
				<visible>Player.HasAudio + Integer.IsGreater(MusicPlayer.Time,0) + !String.IsEmpty(Window(Home).Property(SkinHelper.Player.Art.DiscArt))</visible>
				<animation type="Hidden" reversible="false">
					<effect type="slide" start="0,0" end="0,60" tween="sine" easing="out" time="600" delay="0" />
					<effect type="fade" start="100" end="0" time="500" delay="0"/>
				</animation>
				<animation type="Visible" reversible="false">
					<effect type="fade" start="0" end="100" time="500" delay="500"/>
					<effect type="slide" start="0,60" end="0,0" tween="sine" easing="out" time="700" delay="1000" />
				</animation>
				<control type="image">
					<animation effect="rotate" center="auto" time="6000" end="-360" condition="true" loop="true">Conditional</animation>
					<left>200</left>
					<top>772</top>
					<width>150</width>
					<height>150</height>
					<texture diffuse="osd/cd.png">$INFO[Window(Home).Property(SkinHelper.Player.Art.DiscArt)]</texture>
					<aspectratio>scale</aspectratio>
				</control>
			</control>
			<control type="image">
				<left>150</left>
				<top>788</top>
				<width>250</width>
				<height>250</height>
				<texture border="48">views/shadow_fo.png</texture>
			</control>
			<control type="image">
				<left>198</left>
				<top>836</top>
				<width>154</width>
				<height>154</height>
				<texture>common/default_empty.png</texture>
			</control>
			<control type="image">
				<left>198</left>
				<top>836</top>
				<width>154</width>
				<height>154</height>
				<texture fallback="common/missing_image_cover.png">$INFO[Player.Art(thumb)]</texture>
				<aspectratio align="left" aligny="bottom">scale</aspectratio>
			</control>
			<!-- Details -->
			<control type="group">
				<left>392</left>
				<top>847</top>
				<!-- Album -->
				<control type="label">
					<width>auto</width>
					<height>40</height>
					<font>Med40</font>
					<textcolor>ffbebebe</textcolor>
					<shadowcolor>ff000000</shadowcolor>
					<label>$INFO[MusicPlayer.Album]</label>
				</control>
				<!-- Artist / Track -->
				<control type="label">
					<top>50</top>
					<width>auto</width>
					<height>40</height>
					<font>Light30</font>
					<textcolor>ffbebebe</textcolor>
					<shadowcolor>ff000000</shadowcolor>
					<label>$VAR[ArtistTrack]</label>
				</control>
				<!-- Time / Duration / Shuffle /Repeat -->
				<control type="grouplist">
					<top>98</top>
					<height>50</height>
					<itemgap>30</itemgap>
					<orientation>horizontal</orientation>
					<usecontrolcoords>true</usecontrolcoords>
					<control type="label">
						<width>auto</width>
						<height>50</height>
						<font>Light26</font>
						<aligny>bottom</aligny>
						<textcolor>ffdadada</textcolor>
						<shadowcolor>ff000000</shadowcolor>
						<label>$INFO[MusicPlayer.Time]$INFO[MusicPlayer.Duration, / ]</label>
					</control>
					<control type="image">
						<top>5</top>
						<width>26</width>
						<height>22</height>
						<texture>osd/visualistion_shuffle.png</texture>
						<visible>String.IsEqual(Playlist.Random,$LOCALIZE[590])</visible>
					</control>
					<control type="image">
						<top>5</top>
						<width>30</width>
						<height>22</height>
						<texture>osd/visualistion_repeat.png</texture>
						<visible>String.IsEqual(Playlist.Repeat,$LOCALIZE[593])</visible>
					</control>
					<control type="image">
						<top>5</top>
						<width>42</width>
						<height>22</height>
						<texture>osd/visualistion_repeat_1.png</texture>
						<visible>String.IsEqual(Playlist.Repeat,$LOCALIZE[592])</visible>
					</control>
				</control>
			</control>
			<!-- Star rating / Rating -->
			<control type="grouplist">
				<visible>!String.IsEmpty(MusicPlayer.UserRating)</visible>
				<right>198</right>
				<width>222</width>
				<top>155</top>
				<height>26</height>
				<itemgap>10</itemgap>
				<orientation>horizontal</orientation>
				<usecontrolcoords>true</usecontrolcoords>
				<animation effect="fade" end="0" start="100" time="0">Hidden</animation>
				<animation delay="200" effect="fade" end="100" start="0" time="80">Visible</animation>
				<control type="image">
					<top>2</top>
					<width>147</width>
					<height>24</height>
					<texture>$INFO[MusicPlayer.UserRating,rating/rating,.png]</texture>
					<aspectratio align="left">keep</aspectratio>
				</control>
				<control type="label">
					<width>auto</width>
					<height>26</height>
					<font>Med26</font>
					<aligny>bottom</aligny>
					<textcolor>ffbebebe</textcolor>
					<shadowcolor>ff000000</shadowcolor>
					<label>$INFO[MusicPlayer.UserRating,,/10]</label>
				</control>
			</control>
		</control>
		<!-- Progress -->
		<control type="group">
			<visible>!Window.IsVisible(musicosd) + !Player.Paused + [Player.Forwarding | Player.Rewinding]</visible>
			<include>PlayerTitles</include>
			<control type="image">
				<bottom>0</bottom>
				<width>1980</width>
				<height>120</height>
				<texture>osd/mask.png</texture>
			</control>
			<!-- Cache bar -->
			<control type="progress">
				<left>92</left>
				<bottom>93</bottom>
				<width>1735</width>
				<height>11</height>
				<reveal>true</reveal>
				<info>Player.ProgressCache</info>
				<texturebg border="4">osd/progress_back.png</texturebg>
				<lefttexture>-</lefttexture>
				<midtexture border="4">osd/progress_cache.png</midtexture>
				<righttexture>-</righttexture>
				<overlaytexture>-</overlaytexture>
			</control>
			<!-- Progress bar -->
			<control type="progress">
				<left>92</left>
				<bottom>93</bottom>
				<width>1735</width>
				<height>11</height>
				<reveal>true</reveal>
				<info>Player.Progress</info>
				<texturebg border="4" colordiffuse="00ffffff">osd/progress_back.png</texturebg>
				<lefttexture>-</lefttexture>
				<midtexture border="4">osd/progress_bar.png</midtexture>
				<righttexture>-</righttexture>
				<overlaytexture>-</overlaytexture>
			</control>
			<control type="grouplist">
				<left>92</left>
				<bottom>38</bottom>
				<width>800</width>
				<height>40</height>
				<itemgap>4</itemgap>
				<orientation>horizontal</orientation>
				<usecontrolcoords>true</usecontrolcoords>
				<!-- Current position -->
				<control type="label">
					<width>auto</width>
					<height>34</height>
					<font>Light27</font>
					<textcolor>fff3f3f3</textcolor>
					<label>$VAR[PlayerTime]</label>
				</control>
				<!-- Divider -->
				<control type="label">
					<width>auto</width>
					<height>34</height>
					<font>Light27</font>
					<textcolor>ff696969</textcolor>
					<label>/</label>
					<visible>!String.IsEmpty(Player.Time) + !String.IsEmpty(Player.Duration)</visible>
				</control>
				<!-- Total length -->
				<control type="label">
					<width>auto</width>
					<height>34</height>
					<font>Light27</font>
					<textcolor>ff696969</textcolor>
					<label>$VAR[PlayerDuration]</label>
				</control>
			</control>
			<!-- Current time -->
			<control type="label">
				<right>92</right>
				<bottom>45</bottom>
				<width>800</width>
				<height>30</height>
				<font>Reg27</font>
				<align>right</align>
				<textcolor>fff3f3f3</textcolor>
				<label>$INFO[System.Time]</label>
			</control>
		</control>
	</controls>
</window>