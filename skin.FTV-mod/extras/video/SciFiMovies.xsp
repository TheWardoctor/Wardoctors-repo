<?xml version="1.0" encoding="UTF-8" standalone="yes" ?>
<smartplaylist type="movies">
    <name>Sci-Fi Movies</name>
    <match>all</match>
    <rule field="genre" operator="contains">
        <value>Sci-Fi</value>
        <value>SciFi</value>
        <value>Science Fiction</value>
        <value>Science-Fiction</value>
    </rule>
    <order direction="ascending">sorttitle</order>
</smartplaylist>
